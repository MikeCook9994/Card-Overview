<Window x:Class="card_overview_wpf.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:card_overview_wpf"
        mc:Ignorable="d"
        Title="Card Overview - Display" Height="300" Width="300" ResizeMode="NoResize" Closing="Window_Closing"
        ShowInTaskbar="True">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="20" Margin="0,0,0,251">
            <MenuItem Header="Layout">
                <MenuItem Header="_Open" Click="MenuItem_Click" />
                <MenuItem Header="_Save" Click="MenuItem_Click_1" />
            </MenuItem>
            <MenuItem Header="Columns">
                <MenuItem Header="Add" Click="MenuItem_Click_2" />
                <MenuItem Header="Remove" Click="MenuItem_Click_4" />
            </MenuItem>
            <MenuItem Header="Rows">
                <MenuItem Header="Add" Click="MenuItem_Click_3" />
                <MenuItem Header="Remove" Click="MenuItem_Click_5" />
            </MenuItem>
            <MenuItem Header="About" Click="MenuItem_Click_7" />
            <MenuItem Header="Settings" Click="MenuItem_Click_6" />
        </Menu>
        <Canvas Name="mainCanvas" />
    </DockPanel>



</Window>
