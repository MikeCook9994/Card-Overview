<Window x:Class="card_overview_wpf.SearchBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:card_overview_wpf"
        mc:Ignorable="d"
        Height="200" Width="300" ResizeMode="NoResize" Title="Card Overview - Search">
    <Grid>
        <TextBox x:Name="textBoxSearch" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" TextChanged="textBoxSearch_TextChanged" />
        <ListBox x:Name="listBoxResults" HorizontalAlignment="Center" Height="131" Margin="0,20,0,0" VerticalAlignment="Top" Width="294"/>
        <Button x:Name="buttonSet" Content="Set" Height="20" Width="147" Click="buttonSet_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" RenderTransformOrigin="-3.367,0.383"/>
        <Button x:Name="buttonCancel" Content="Cancel" Height="20" Width="147" Click="buttonCancel_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
